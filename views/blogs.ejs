<%- include ("header.ejs")%>

<section id="banner">
    <div class="container">
        <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis border border-light" style="border-radius: 50px!important; text-align: center;">
            <div>
                <h1 class="display-4 fst-italic text-capitalize">Blogs The Necessity</h1>
                <p class="lead my-3">wjndkjwkvkbj</p>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row" role="listbox">
                <%postsFound.forEach(function(post){%>
                <div class="col-md-3 p-3">
                    <div class="card">
                        <img src="/digital.webp" alt="...">
                        <div class="card-body">
                            <hr class="hr text-light position-relative" style="width: 16rem;" />
